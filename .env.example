# Stop loss percentage (e.g., 10 = 10%)
STOP_LOSS_PERCENTAGE=10

# Max slippage tolerance
MAX_SLIPPAGE_PERCENTAGE=2

# Bot loop interval in milliseconds (300000 = 5 minutes)
BOT_LOOP_INTERVAL_MS=300000

# Minimum liquidity required in USD
MIN_LIQUIDITY_USD=10000

# Cross-chain features (optional)
