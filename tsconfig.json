{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["bun-types"],
    "paths": {
      "@agent/*": ["src/agent/*"],
      "@blockchain/*": ["src/blockchain/*"],
      "@data/*": ["src/data/*"],
      "@utils/*": ["src/utils/*"],
      "@alerts/*": ["src/alerts/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "apps"]
}
