{
  "name": "immortal-bnb",
  "version": "1.0.0",
  "description": "An autonomous AI trading agent for BNB Chain with immortal memory storage on BNB Greenfield",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun start-bot.ts",
    "dev": "bun run --watch src/index.ts",
    "dev:frontend": "bun --cwd frontend dev",
    "dev:backend": "bun run --watch src/index.ts",
    "dev:full": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "bot": "bun index.ts",
    "setup": "bash scripts/setup.sh",
    "check": "bun start-bot.ts",
    "frontend": "cd frontend && bun dev",
    "backend": "bun src/api/server.ts",
    "install:all": "bun install && cd frontend && bun install",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:frontend": "bun --cwd frontend build",
    "build:all": "bun run build && bun run build:frontend",
    "test": "bun test",
    "test:integration": "bun test-integration.ts",
    "test:trade": "bun test-trade.ts",
    "test:polymarket": "bun test-polymarket.ts",
    "lint": "eslint src/**/*.ts",
    "healthcheck": "bun run scripts/healthcheck.ts",
    "monitor": "bun run scripts/monitor.ts",
    "monitor:watch": "bun run scripts/monitor.ts --watch",
    "backup": "bash scripts/backup.sh",
    "docker:build": "docker build -t immortal-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f bot",
    "validate": "npx ts-node scripts/validate-deployment.ts",
    "perf": "bun run scripts/performance.ts --current",
    "perf:report": "bun run scripts/performance.ts --report",
    "perf:collect": "bun run scripts/performance.ts --collect",
    "contracts:build": "forge build",
    "contracts:test": "forge test",
    "contracts:deploy": "bash scripts/foundry-deploy.sh",
    "contracts:deploy-manual": "bun run scripts/deploy-contracts.ts",
    "cli": "bun cli.ts",
    "status": "bun cli.ts status",
    "balance": "bun cli.ts balance",
    "trades": "bun cli.ts trades",
    "stats": "bun cli.ts stats"
  },
  "keywords": [
    "ai",
    "trading",
    "bnb",
    "blockchain",
    "defi",
    "autonomous",
    "pancakeswap",
    "greenfield",
    "immortal-memory"
  ],
  "author": "arhansubasi0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/caelum0x/immortal-bnb"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.63",
    "@bnb-chain/greenfield-js-sdk": "^2.0.0",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@pancakeswap/chains": "^0.7.0",
    "@pancakeswap/price-api-sdk": "^11.1.1",
    "@pancakeswap/sdk": "^5.7.0",
    "@pancakeswap/smart-router": "^4.8.0",
    "@pancakeswap/stable-swap-sdk": "^2.0.11",
    "@pancakeswap/swap-sdk-core": "^1.0.0",
    "@pancakeswap/tokens": "^0.7.10",
    "@pancakeswap/universal-router-sdk": "^1.4.16",
    "@pancakeswap/v2-sdk": "^1.1.7",
    "@pancakeswap/v3-sdk": "^3.7.0",
    "@polymarket/clob-client": "^4.22.8",
    "@prisma/client": "^6.19.0",
    "ai": "^5.0.87",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "jsbi": "^4.3.0",
    "long": "^5.2.3",
    "node-fetch": "^3.3.2",
    "prisma": "^6.19.0",
    "reflect-metadata": "^0.2.2",
    "telegraf": "^4.16.3",
    "tiny-invariant": "^1.3.1",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "wormhole-sdk": "^0.10.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "hardhat": "^3.0.12",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
